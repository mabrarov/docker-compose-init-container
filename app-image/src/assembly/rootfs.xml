<assembly xmlns="http://maven.apache.org/ASSEMBLY/2.1.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/ASSEMBLY/2.1.0 http://maven.apache.org/xsd/assembly-2.1.0.xsd">
    <id>rootfs</id>
    <formats>
        <format>tar</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    <fileSets>
        <fileSet>
            <outputDirectory/>
            <directory>${project.build.directory}</directory>
            <includes>
                <include>tini</include>
            </includes>
            <fileMode>0555</fileMode>
        </fileSet>
        <fileSet>
            <outputDirectory/>
            <directory>src/main/resources/rootfs</directory>
            <includes>
                <include>*xml</include>
            </includes>
            <fileMode>0444</fileMode>
            <lineEnding>unix</lineEnding>
        </fileSet>
    </fileSets>
    <dependencySets>
        <dependencySet>
            <outputDirectory/>
            <includes>
                <include>org.mabrarov.docker-compose-init-container:app:jar</include>
            </includes>
            <outputFileNameMapping>${artifact.artifactId}${dashClassifier?}.${artifact.extension}</outputFileNameMapping>
            <useProjectArtifact>false</useProjectArtifact>
            <fileMode>0444</fileMode>
        </dependencySet>
        <dependencySet>
            <outputDirectory/>
            <includes>
                <include>org.jacoco:org.jacoco.agent:jar:runtime</include>
            </includes>
            <outputFileNameMapping>jacoco.jar</outputFileNameMapping>
            <useProjectArtifact>false</useProjectArtifact>
            <fileMode>0444</fileMode>
        </dependencySet>
    </dependencySets>
</assembly>
